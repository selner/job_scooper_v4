{
  "jobsite_plugins": [
    {
      "JobSiteName": "adzuna",
      "SourceURL": "https://www.adzuna.co.uk/jobs/search?adv=1&qtl=***KEYWORDS***&cty=permanent&cti=full_time&f=1&w=***LOCATION:{Place},{RegionCode}%20{CountryCode}***&d=10&p=***PAGE_NUMBER***&pp=50&sb=date&sd=down",
      "BaseURL": "https://www.adzuna.co.uk/",
      "LocationType": "location-city",
      "CountryCodes": [
        "UK"
      ],
      "AdditionalFlags": [
      ],
      "Collections": [
        {
          "Name": "PageFields",
          "Fields": [
            {
              "Name": "NoPostsFound",
              "Selector": "div.snr h1",
              "Index" : 0,
              "Callback" : "matchesNoResultsPattern",
              "CallbackParameter": "No result",
              "Attribute": "text",
              "Type": "CSS"
            },
            {
              "Name": "TotalPostCount",
              "Selector": "div.srt p",
              "Type": "CSS",
              "Index": 0,
              "Attribute": "text",
              "Pattern": "/.*of\\s(\\d+)/"
            },
            {
              "Name": "JobPostItem",
              "Selector": "div.sr div.a",
              "Attribute": "collection",
              "Type": "CSS"
            }
          ]
        },
        {
          "Name": "ItemFields",
          "Fields": [
            {
              "Name": "Title",
              "Selector": "h2 a",
              "Index": 0,
              "Type": "CSS"
            },
            {
              "Name": "Url",
              "Selector": "h2 a",
              "Attribute": "href",
              "Index": 0,
              "Type": "CSS"
            },
            {
              "Name": "JobSitePostId",
              "Selector": "h2 a",
              "Attribute": "data-aid",
              "Index": 1
            },
            {
              "Name": "Location",
              "Selector": "span.loc",
              "Attribute": "text",
              "Index": 0,
              "Type": "CSS"
            },
            {
              "Name": "Company",
              "Selector": "p.as",
              "Attribute": "text",
              "Pattern": "/(.*)\\s-.*/",
              "Index": 0,
              "Type": "CSS"
            },
            {
              "Name": "Company",
              "Selector": "span.from",
              "Attribute": "text",
              "Pattern": "/From (.*)/",
              "Index": 0,
              "Type": "CSS"
            },
            {
              "Name": "PayRange",
              "Selector": "strong.sp span",
              "Attribute": "text",
              "Index": 0,
              "Type": "CSS"
            }
          ]
        }
      ],
      "Pagination": {
        "PageLimit": 50,
        "Type": "PAGE-VIA-URL"
      }
    }
  ]
}
