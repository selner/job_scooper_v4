{
    "JobSiteName": "ProductHunt",
    "SourceURL": "http://producthunt.com/jobs",
    "BaseURL": "http://producthunt.com/jobs/",
    "CountryCodes": [
        "US"
    ],
    "Collections": [
        {
            "Name": "PageFields",
            "Fields": [
                {
                    "Name": "TotalPostCount",
                    "Selector": "div.container_29fbe div div.boxHeader_f1838 div span",
                    "Pattern": "/(\\d+).*/",
                    "Attribute": "text",
                    "Index": 0,
                    "Type": "CSS"
                },
                {
                    "Name": "JobPostItem",
                    "Selector": "//*[*[starts-with(@id,'items-')]]",
                    "Attribute": "collection",
                    "Type": "XPATH"
                }
            ]
        },
        {
            "Name": "ItemFields",
            "Fields": [
                {
                    "Name": "Title",
                    "Selector": "div[class^='itemInfos_'] div span",
                    "Attribute": "text",
                    "Index": 0,
                    "Type": "CSS"
                },
                {
                    "Name": "Location",
                    "Selector": "div[class^='itemInfos_'] div div",
                    "Index": 0,
                    "Attribute": "text",
                    "Callback": "splitvalue",
                    "CallbackParameter": { "delimeter" : " · ", "index" : 1 },
                    "Type": "CSS"
                },
                {
                    "Name": "Category",
                    "Selector": "div[class^='itemInfos_'] div div",
                    "Index": 0,
                    "Attribute": "text",
                    "Callback": "splitvalue",
                    "CallbackParameter": { "delimeter" : " · ", "index" : 0 },
                    "Type": "CSS"
                },
                {
                    "Name": "PayRange",
                    "Selector": "div[class^='itemInfos_'] div div",
                    "Index": 0,
                    "Attribute": "text",
                    "Callback": "splitValue",
                    "CallbackParameter": { "delimeter" : " · ", "index" : 2 },
                    "Type": "CSS"
                },
                {
                    "Name": "Company",
                    "Selector": "h3",
                    "Index": 0,
                    "Attribute": "text",
                    "Type": "CSS"
                },
                {
                    "Name": "CompanyLogo",
                    "Selector": "div[class^='left_'] div div img",
                    "Index": 0,
                    "Attribute": "src",
                    "Type": "CSS"
                },
                {
                    "Name": "Url",
                    "Selector": "div[class^='footer_'] a",
                    "Attribute": "href",
                    "Index": 0,
                    "Type": "CSS"
                },
                {
                    "Name": "FullDescription",
                    "Selector": "div[class^='details_'] div div span",
                    "Attribute": "text",
                    "Index": 0,
                    "Type": "CSS"
                },
                {
                    "Name": "JobSitePostId",
                    "Pattern": "/.*?jobs\/(\\d+)-.*/",
                    "Type": "SOURCEFIELD",
                    "Field": "Url"
                },
                {
                    "Name": "PostedAt",
                    "Selector": "time",
                    "Index": 0,
                    "Attribute": "datetime",
                    "Type": "CSS"
                }
            ]
        }
    ],
    "Pagination": {
        "Type": "INFINITE-SCROLL-PAGE-DOWN",
        "PageLimit": 20
    }
}